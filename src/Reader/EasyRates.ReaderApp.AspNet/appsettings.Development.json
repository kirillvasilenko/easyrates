{
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;port=5432;database=easyrates;user id=easyrates_app;password=easyrates_app"
  },

  "Auth": {
    "UseTestAuth": true,

    "Issuer": "easyrates",
    "Audience": "easyrates",
    "Secret": "01234567890123456789"
  },

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/logs-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
